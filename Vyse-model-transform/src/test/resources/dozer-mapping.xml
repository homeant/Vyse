<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <mapping date-format="yyyy-MM-dd">
        <class-a>fun.Vyse.cloud.test.domain.User</class-a>
        <class-b>fun.Vyse.cloud.test.domain.UserDto</class-b>
        <field>
            <a>name</a>
            <b>nickname</b>
        </field>
        <field>
            <a>date</a>
            <b>date</b>
        </field>
        <field>
            <a>addresses</a>
            <b>adds</b>
        </field>
    </mapping>
    <mapping>
        <class-a>fun.Vyse.cloud.test.domain.Address</class-a>
        <class-b>fun.Vyse.cloud.test.domain.Site</class-b>
        <field>
            <a>address</a>
            <b>name</b>
        </field>
    </mapping>
</mappings>